@model List<Duty>

@{
    if (TempData["hata"] != null)
    {
        <script>
            alert("@TempData["hata"].ToString()")
        </script>
    }

}

<div>
    <a href=" @Url.ActionLink("Index","Home")">Home</a> | <a href="@Url.ActionLink("Create","Duty")"> Yeni Görev Oluştur</a>
</div>

@if (Model != null)
{
    <table>
        <thead>
        <th>ID</th>
        <th>Duty Name</th>
        <th> Duty Time (Days) </th>
        <th>Operations</th>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].ID</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].TimeInDays </td>
                    <td>
                        <a href="@Url.ActionLink("Delete","Duty",new{id=Model[i].ID})">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}